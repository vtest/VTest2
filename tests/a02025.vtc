varnishtest "Test -bodyfrom"

shell {printf helloworld >body.txt}

server s1 {
	stream 1 {
		rxreq
		expect req.body == helloworld
		txresp -bodyfrom body.txt
	} -run
} -start

client c1 -connect ${s1_sock} {
	stream 1 {
		txreq -bodyfrom body.txt
		rxresp
		expect resp.body == helloworld
	} -run
} -run

server s1 -wait
